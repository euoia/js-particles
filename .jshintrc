{
  // vim: ft=javascript
  // http://www.jshint.com/docs/options/

  // Environment.
  "devel": true, // Remove this for testing prod code.
  "browserify": true,

  // Generally speaking I enabled all "enforcing options" and left out any
  // "relaxing" options.

  // Enforcing options.
  "bitwise": true,
  "boss": true,
  "browser": true,
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "eqnull": true,
  "forin": true,
  "freeze": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "nobsp": true,
  "nonew": true,
  "plusplus": true,
  // For this project, it's convenient to be able to mix quotes since we sometimes use an apostrophe.
  "quotmark": false,
  "sub": true,
  "undef": true,
  "unused": true,
  "white": false,

  // These ones are opinionated, change if required.
  "maxparams": 5,
  "maxdepth": 4,
  "maxcomplexity": 10,

  // Relaxing options.
  "globalstrict": true
}
